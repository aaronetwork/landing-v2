---

<section class="py-16">
  <div class="max-w-3xl mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-8">Latest Updates</h2>
    <ul class="space-y-8">
      {updates.map((update) => (
        <li class="border-l-4 border-primary-500 pl-4">
          <p class="text-lg font-semibold text-primary-700">{update.date}</p>
          <p class="text-base text-gray-600 mt-2">{update.content}</p>
          <p class="text-base text-gray-600 mt-2">
            {update.link.map((item) => (
              <p>
                <a
                  href={item.href}
                  class="focus-visible:outline-primary-950 dark:focus-visible:outline-primary-200 inline-flex items-center gap-1 rounded-md text-base hover:underline focus-visible:outline focus-visible:outline-2"
                  target={item.isExternal ? '_blank' : undefined}
                  rel={item.isExternal ? 'noopener' : undefined}
                  style="color: blue"
                >
                  {item.name} {item.isExternal && (
                  <svg
                    class="h-4 w-4"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    aria-hidden="true"
                  >
                    <path d="M10 6V8H5V19H16V14H18V20C18 20.5523 17.5523 21 17 21H4C3.44772 21 3 20.5523 3 20V7C3 6.44772 3.44772 6 4 6H10ZM21 3V11H19L18.9999 6.413L11.2071 14.2071L9.79289 12.7929L17.5849 5H13V3H21Z" />
                  </svg>
                )}
                </a>
              </p>
            ))}
          </p>
        </li>
      ))}
    </ul>
  </div>
</section>
